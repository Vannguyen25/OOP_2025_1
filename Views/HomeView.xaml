<UserControl x:Class="OOP_Semester.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:OOP_Semester.ViewModels"
             xmlns:v="clr-namespace:OOP_Semester.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             FontFamily="sans-serif">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:TodayViewModel}">
            <v:TodayView />
        </DataTemplate>

        <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#757564"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                           FontFamily="Segoe UI Symbol" FontSize="18"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFF8E1"/>
                                <Setter Property="Foreground" Value="#f58634"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#f58634"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#f8f8f5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#e9e8ce" BorderThickness="0,0,1,0">
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,40">
                    <Border Width="48" Height="48" CornerRadius="24" BorderBrush="#f58634" BorderThickness="2">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding AvatarUrl}" Stretch="UniformToFill"/>
                        </Border.Background>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AvatarUrl}" Value="{x:Null}">
                                        <Setter Property="Background" Value="#ddd"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <StackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                        <TextBlock Text="{Binding Username}" FontWeight="Bold" FontSize="16" Foreground="#1c1c0d"/>
                        <TextBlock Text="Welcome back!" FontSize="12" Foreground="#f58634" FontFamily="montserrat" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <RadioButton Content="Hôm nay" Tag="📅   " 
                                 Style="{StaticResource MenuButtonStyle}" IsChecked="True"
                                 Command="{Binding NavigateCommand}" CommandParameter="Today" />

                    <RadioButton Content="Thói quen" Tag="📝  " 
                                 Style="{StaticResource MenuButtonStyle}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Habits"/>

                    <RadioButton Content="Thử thách" Tag="🏆  " 
                                 Style="{StaticResource MenuButtonStyle}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Challenges"/>

                    <RadioButton Content="Thú cưng" Tag="🐶  " 
                                 Style="{StaticResource MenuButtonStyle}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Pet"/>

                    <RadioButton Content="Cửa hàng" Tag="🛍️  " 
                                 Style="{StaticResource MenuButtonStyle}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Shop"/>

                    <RadioButton Content="Thống kê" Tag="📊  " 
                                 Style="{StaticResource MenuButtonStyle}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Statistics"/>
                </StackPanel>

                <StackPanel Grid.Row="2">

                    <Border Background="#FFF3E0" CornerRadius="16" Padding="16" Margin="0,20,0,0" d:IsHidden="True">
                        <StackPanel>
                            <TextBlock Text="Nâng cấp Premium" FontWeight="Bold" Foreground="#f58634" FontSize="12"/>
                            <TextBlock Text="Mở khóa thú cưng và skin giới hạn!" TextWrapping="Wrap" FontSize="11" Margin="0,4,0,8" Foreground="#555"/>
                            <Button Content="Nâng cấp ngay" Background="#1c1c0d" Foreground="White" 
                                    BorderThickness="0" Padding="10,6" FontSize="11">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </Border>
                    <RadioButton Content="Cài đặt" Tag="⚙️   " 
                                 Style="{StaticResource MenuButtonStyle}"
                                 Command="{Binding NavigateCommand}" CommandParameter="Settings"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Background="#f8f8f5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="30,20,30,30"/>
        </Grid>

    </Grid>
</UserControl>